package day03;
import java.util.*;
public class 求最大值 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("请输入a,b,c的值:");
		int a = sc.nextInt();
		int b = sc.nextInt();
		int c = sc.nextInt();
		int max,min;
		System.out.println("您输入的值为：a="+a+",b = "+b+",c = "+c);
		/*a = 12,b = 23,c = 77*/
		if(a>b){
			max = a;
			min = b;
		}else{
			max = b;
			min = a;
		}
		
		if(c>max){
			max = c;
		}
		if(c<min){
			min = c;
		}
		System.out.println("最大值 为："+max+",最小值为："+min);
	}
}
